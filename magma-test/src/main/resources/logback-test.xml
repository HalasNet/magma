<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d - %-5p - %c.%M:%L - %m%n</pattern>
    </encoder>
  </appender>

  <appender name="benchmark" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>target/benchmark.log</file>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>benchmark-%i.log</fileNamePattern>
      <maxIndex>10</maxIndex>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>10MB</maxFileSize>
    </triggeringPolicy>
    <encoder>
      <pattern>%date - %-5level - %logger - %message%n</pattern>
    </encoder>
  </appender>

  <logger name="benchmark" additivity="false" level="info">
    <appender-ref ref="benchmark"/>
  </logger>

  <!--<logger name="org.obiba" level="debug"/>-->

  <root level="info">
    <appender-ref ref="console"/>
  </root>

</configuration>